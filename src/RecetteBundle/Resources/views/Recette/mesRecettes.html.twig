{% extends "@FOSUser/layout.html.twig" %}
{% block try %}

        {% for recette in r %}
            <tr>
                <td> {{ recette.nom }}</td>
                <td> <img src="{{ asset('images/' ~ recette.nomImage) }}" style="width: 80px;height: 80px"></td>
                <td> {{ recette.type }}</td>
                <td> {{ recette.description }}</td>
                <td> <a href="#" target="_blank">Voir recette par ici</a></td>
                <td> <a href="#" target="_blank">Modifier Cette Recette</a></td>
                <td> <a href="#" target="_blank">Supprimer Cette Recette</a></td>







            </tr>
        {% endfor %}

<div id="back2top"><i class="fa fa-angle-up"></i></div>
<div class="loader"></div>
<div class="page-wrap">
    <!-- Heros-->

    <div class="ps-section--page">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 col-lg-push-3 col-md-push-3">
                    <div class="ps-shop-listing pt-80 pb-40">
                        <div class="ps-shop-features">
                            <div class="row">
                                <div class="ps-section__content text-center">
                                    <h3 class="ps-section__title" style="color: salmon;">Mes Recettes</h3> </div>
                                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 "><img class="mb-30" src="images/product-banner/012x.jpg" alt="">
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12 "><img class="mb-30" src="images/product-banner/022x.jpg" alt="">
                                </div>
                            </div>
                        </div>

                    </div>
                        <div class="ps-shop">
                            {% for recette in r %}
                            <div class="ps-product--list ps-product--list-large">
                                <div class="ps-product__thumbnail">
                                    <a class="ps-product__overlay" href="product-detail.html"></a><img src="images/cake/img-cake-2.jpg" alt=""></div>
                                <div class="ps-product__content">
                                    <h4 class="ps-product__title"><a href="#">{{ recette.nom }}</a></h4>
                                    <select class="ps-rating">
                                        <option value="1">1</option>
                                        <option value="1">2</option>
                                        <option value="1">3</option>
                                        <option value="1">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <p class="ps-product__price">
                                        {{ recette.type }}
                                    </p>
                                    <p>{{ recette.description }}</p>
                                    <footer class="ps-product__footer clearfix"><a class="ps-btn ps-btn--sm" href="cart.html">Consulter<i class="fa fa-angle-right"></i></a>
                                        <ul class="ps-product__action">
                                            <li><a href="#" data-tooltip="Modifier"><i class="ps-icon--heart"></i></a></li>
                                            <li><a href="#" data-tooltip="Supprimer"><i class="ps-icon--reload"></i></a></li>
                                        </ul>
                                    </footer>
                                </div>
                            </div>

                                    <p>Lollipop dessert donut marzipan cookie bonbon sesame snaps chocolate. Cupcake sweet roll sweet dragée dragée. Lollipop dessert donut marzipan cookie bonbon sesame snaps chocolate cake.</p>
                                    <footer class="ps-product__footer clearfix"><a class="ps-btn ps-btn--sm" href="cart.html">Order now<i class="fa fa-angle-right"></i></a>
                                        <ul class="ps-product__action">
                                            <li><a href="#" data-tooltip="Add to wishlist"><i class="ps-icon--heart"></i></a></li>
                                            <li><a href="#" data-tooltip="Compare"><i class="ps-icon--reload"></i></a></li>
                                        </ul>
                                    </footer>
                                </div>
                    {% endfor %}
                        </div>

                </div>
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 col-lg-pull-9 col-md-pull-9">
                    <div class="ps-sidebar">
                        <aside class="ps-widget ps-widget--sidebar ps-widget--search">
                            <form method="post" action="search-result.html">
                                <input class="form-control" type="text" placeholder="Type here bakery name...">
                                <button type="submit"><i class="ps-icon--search"></i></button>
                            </form>
                        </aside>
                        <aside class="ps-widget ps-widget--sidebar ps-widget--category">
                            <div class="ps-widget__header">
                                <h3 class="ps-widget__title">CATEGORY</h3>
                            </div>
                            <div class="ps-widget__content">
                                <ul class="ps-list--circle">
                                    <li class="current"><a href="product-listing.html"><span class="circle"></span>All bakery (321)</a></li>
                                    <li><a href="product-listing.html"><span class="circle"></span>Amazin’ Glazin’</a></li>
